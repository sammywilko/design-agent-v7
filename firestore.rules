rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User-owned projects - simplified read rule for queries/empty database
    match /userProjects/{projectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Shared/collaborative projects (for real-time collaboration)
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
  }
}
